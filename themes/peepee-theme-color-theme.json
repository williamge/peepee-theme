{
  "$schema": "vscode://schemas/color-theme",
  "type": "dark",
  "colors": {
    "activityBarBadge.background": "#007acc",
    "editor.background": "#181818",
    "editor.foreground": "#b9b9b9",
    "editor.selectionBackground": "#184956",
    "editor.inactiveSelectionBackground": "#103c48",
    "editor.selectionHighlightBackground": "#b9b9b9",
    "editor.findMatchBackground": "#00cc44a8", //Current SEARCH MATCH
    "editor.findMatchHighlightBackground": "#3b3b3b", //Other SEARCH MATCHES
    "editorBracketMatch.background": "#249024",
    "editorIndentGuide.background": "#404040",
    "list.dropBackground": "#383b3d",
    "sideBarTitle.foreground": "#bbbbbb"
  },
  "configurationDefaults": {
    "elixir": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "tokenColors": [
    // Base
    {
      "scope": "source",
      "settings": {
        "foreground": "#dedede"
        // "foreground": "#ed4a46"
      }
    },

    // Methods
    {
      "scope": "meta.function.definition.elixir keyword.control",
      "settings": {
        "foreground": "#252525",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "storage.type",
      "settings": {
        "foreground": "#3b3b3b",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "keyword.control",
      "settings": {
        "foreground": "#777777",
        "fontStyle": ""
      }
    },
    {
      "scope": "keyword.control.flow",
      "settings": {
        "foreground": "#777777",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "keyword.other.special-method.elixir",
        "keyword.control.import",
        "keyword.control.export",
        "keyword.control.type",
        "storage.type.type"
      ],
      "settings": {
        "foreground": "#eb6eb7"
      }
    },
    {
      "scope": [
        "entity.name.function.elixir",
        "meta.definition.variable entity.name.function",
        "entity.name.type"
      ],
      "settings": {
        "foreground": "#56d8c9",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "entity.name.function-call.elixir",
        "meta.function-call",
        "variable.other.property"
      ],
      "settings": {
        "foreground": "#56d8c9",
        "fontStyle": ""
      }
    },
    {
      "scope": "parameter.variable.function.elixir",
      "settings": {
        "foreground": "#dedede"
      }
    },
    {
      "scope": "variable.other.anonymous.elixir",
      "settings": {
        "foreground": "#ed4a46"
      }
    },
    // Modules/Variables
    {
      "scope": [
        "variable.other.constant.elixir",
        "variable.other",
        "support.class.component"
      ],
      "settings": {
        "foreground": "#4f9cfe",
        "fontStyle": ""
      }
    },
    {
      "scope": [
        "variable.language.elixir",
        "meta.definition.variable variable.other.constant"
      ],
      "settings": {
        "foreground": "#368aeb",
        "fontStyle": "italic"
      }
    },
    // Modules
    {
      "scope": "entity.name.type.module.elixir",
      "settings": {
        "foreground": "#4f9cfe",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "keyword.control.module.elixir",
      "settings": {
        "foreground": "#EB6EB7",
        "fontStyle": ""
      }
    },
    // Symbols
    {
      "scope": "keyword.operator",
      "settings": {
        // "foreground": "#a580e2",
        "foreground": "#777777",
        "fontStyle": ""
      }
    },
    {
      "scope": [
        "keyword.operator.assignment.elixir",
        "keyword.operator.comparison"
      ],
      "settings": {
        "foreground": "#b891f5",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "constant.language.symbol.elixir",
        "meta.object-literal",
        "meta.tag.attributes",
        "variable.object.property",
        "support.type.property-name"
      ],
      "settings": {
        "foreground": "#b9b9b9",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "constant.language",
        "constant.language.elixir",
        "constant.language.null",
        "constant.language.boolean"
      ],
      "settings": {
        "foreground": "#e67f43",
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["constant.language.boolean.true"],
      "settings": {
        "foreground": "#fa9153"
      }
    },
    {
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#e67f43",
        "fontStyle": ""
      }
    },
    {
      "scope": "comment.wildcard.elixir",
      "settings": {
        // "foreground": "#51616D",
        "foreground": "#777777"
      }
    },
    {
      "scope": ["punctuation", "meta.brace"],
      "settings": {
        "fontStyle": ""
      }
    },
    {
      "scope": "punctuation.definition.map.elixir",
      "settings": {
        "foreground": "#A580E2"
      }
    },
    {
      "scope": "punctuation.separator.object.elixir",
      "settings": {
        "foreground": "#b891f5"
      }
    },
    // Attributes
    {
      "scope": "variable.other.readwrite.module.elixir",
      "settings": {
        "foreground": "#eb6eb7",
        "fontStyle": ""
      }
    },
    // Strings/comments
    {
      "scope": "comment.unused.elixir",
      "settings": {
        // "foreground": "#51616D",
        "foreground": "#777777",
        "fontStyle": "italic strikethrough"
      }
    },
    {
      "scope": [
        "punctuation.definition.string.begin.elixir",
        "punctuation.definition.string.end.elixir"
      ],
      "settings": {
        "foreground": "#83c746",
        "fontStyle": ""
      }
    },
    {
      "scope": "string.quoted.double",
      "settings": {
        "foreground": "#70b433",
        "fontStyle": ""
      }
    },
    {
      "scope": "string.quoted.single",
      "settings": {
        "foreground": "#83c746",
        "fontStyle": ""
      }
    },
    {
      "scope": [
        "comment",
        "comment.line.number-sign.elixir",
        "comment.documentation.heredoc.elixir"
      ],
      "settings": {
        "foreground": "#51616D",
        "fontStyle": ""
      }
    },
    // General
    {
      "scope": "emphasis",
      "settings": {
        "fontStyle": "italic"
      }
    },
    {
      "scope": "strong",
      "settings": {
        "fontStyle": "bold"
      }
    },
    {
      "scope": "header",
      "settings": {
        "foreground": "#000080"
      }
    }
  ]
}
